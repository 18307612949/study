<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.honghe.record.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_record_wav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wav录音" />

        <Button
            android:id="@+id/btn_play_wav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wav播放" />

        <Button
            android:id="@+id/btn_play_raw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="raw播放" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_record_wav2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wav录音2" />

        <Button
            android:id="@+id/btn_play_wav2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wav播放2" />

        <Button
            android:id="@+id/btn_play_raw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="raw播放2" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_record_amr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amr录音" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止录音" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_wave_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wave音频拼接" />

        <Button
            android:id="@+id/btn_wave_join_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wave音频拼接后播放" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_wave2spx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拼接后的wave转spx" />

    <Button
        android:id="@+id/btn_spx2wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spx转回wave" />

    <Button
        android:id="@+id/btn_playspx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放转换后的wave" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_record_spx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="司信录制spx" />

        <Button
            android:id="@+id/btn_sixin_show_wave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示波形" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_sixin_spx2wave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="司信spx转wave" />

        <Button
            android:id="@+id/btn_sixin_wave_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放司信speex转换后的wave" />
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文本" />

</LinearLayout>